generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  OWNER
  MEMBER
}

enum PostType {
  UPDATE
  QUESTION
}

model Workspace {
  id         String   @id @default(cuid())
  name       String
  slug       String   @unique
  accessCode String   @db.VarChar(5)
  createdAt  DateTime @default(now())

  members WorkspaceMember[]
  invites Invite[]
  posts   Post[]
  comments Comment[]
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String?
  name         String?
  createdAt    DateTime @default(now())

  memberships WorkspaceMember[]
  posts       Post[]
  comments    Comment[]
}

model WorkspaceMember {
  id          String   @id @default(cuid())
  workspaceId String
  userId      String
  role        Role
  createdAt   DateTime @default(now())

  workspace Workspace @relation(fields: [workspaceId], references: [id])
  user      User      @relation(fields: [userId], references: [id])

  @@unique([workspaceId, userId])
  @@index([workspaceId])
  @@index([userId])
}

model Invite {
  id          String    @id @default(cuid())
  workspaceId String
  email       String?
  token       String    @unique
  createdAt   DateTime  @default(now())
  expiresAt   DateTime
  usedAt      DateTime?

  workspace Workspace @relation(fields: [workspaceId], references: [id])
}

model Post {
  id                String   @id @default(cuid())
  workspaceId       String
  authorId          String?
  authorDisplayName String?
  isAnonymous       Boolean  @default(false)
  title             String?
  body              String   @db.Text
  postType          PostType @default(UPDATE)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  workspace Workspace @relation(fields: [workspaceId], references: [id])
  author    User?     @relation(fields: [authorId], references: [id])
  comments  Comment[]

  @@index([workspaceId, createdAt])
}

model Comment {
  id                String   @id @default(cuid())
  postId            String
  workspaceId       String
  authorId          String?
  authorDisplayName String?
  isAnonymous       Boolean  @default(false)
  body              String   @db.Text
  createdAt         DateTime @default(now())

  post      Post      @relation(fields: [postId], references: [id])
  workspace Workspace @relation(fields: [workspaceId], references: [id])
  author    User?     @relation(fields: [authorId], references: [id])

  @@index([postId, createdAt])
}
