generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String       @id @default(cuid())
  email        String       @unique
  passwordHash String
  name         String?
  privateMode  Boolean      @default(false)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  messages     Message[]
  memories     MemoryItem[]
  reminders    Reminder[]
}

model Message {
  id        String   @id @default(cuid())
  userId    String
  role      String
  content   String
  isNote    Boolean  @default(false)
  audioPath String?
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  memoryItems MemoryItem[]
  reminders   Reminder[]
}

model MemoryItem {
  id              String   @id @default(cuid())
  userId          String
  type            String
  title           String
  content         String
  embedding       Json
  sourceMessageId String?
  pinned          Boolean  @default(false)
  archived        Boolean  @default(false)
  createdAt       DateTime @default(now())

  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  message Message? @relation(fields: [sourceMessageId], references: [id], onDelete: SetNull)
}

model Reminder {
  id              String   @id @default(cuid())
  userId          String
  text            String
  dueAt           DateTime
  completed       Boolean  @default(false)
  sourceMessageId String?
  createdAt       DateTime @default(now())

  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  message Message? @relation(fields: [sourceMessageId], references: [id], onDelete: SetNull)
}
